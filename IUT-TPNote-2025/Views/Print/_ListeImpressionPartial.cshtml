@model IEnumerable<IUT_TPNote_2025.Models.Impression>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImprimanteUtilisee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomDocument)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Statut)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImprimanteUtilisee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomDocument)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Statut)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id=item.Id })
                @Html.ActionLink("Anuler", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
